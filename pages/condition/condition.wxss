.body-status-wrapper{
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
  margin-top: 60rpx;
}
.body-timer-wrapper{
  display: flex;
  justify-content: space-around;
  height: 135rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.body-timer-wrapper1{
  display: flex;
  justify-content: space-around;
  height: 165rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.body-timer-style{
  width: 350rpx;
  height: 150rpx; 
  background-color: #7984a1;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, .5);
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
}

.body-timer-left{
  display:flex;
  margin:auto;
  justify-content:center;
  align-items:center;
  flex-direction:column; /* 垂直方向对齐 */
}
.body-timer-left1{
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column; /* 垂直方向对齐 */
}
.body-timer-right1{
  display:flex;
  align-items: center;
  flex-direction:column; /* 垂直方向对齐 */
  padding: 2rpx;
}
.body-set-slider-wrapper{
  display:flex;
  align-items: center;
  justify-content: space-between;
}
.control{
  width: 350rpx;
  height: 180rpx; 
  background-color: #7984a1;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, .5);
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
}
.choose {
  margin: 5rpx auto;
}

.join {
  width: 330rpx;
  height: 75rpx;
  background-color: #07c160;
  margin: 30rpx auto;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  font-weight: bold;
  border-radius: 12rpx;
}
