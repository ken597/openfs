/* pages/index/index.wxss */
.cover {
  background-color: #e7b510;
  text-align: center;
  padding: 10rpx;
}
.logo {
  width: 240rpx;
  height: 240rpx;
}
.title {
  font-weight: 500;
  color: #a54141;
  font-size: 44rpx;
  margin: 50rpx 32rpx;
}
.desc1 {
  font-size: 28rpx;
  font-weight: 400;
  color: #888888;
  margin: 32rpx;
}
.desc2 {
  font-size: 23rpx;
  font-weight: 300;
  color: #888888;
  margin: 32rpx;
}
.text {
  margin: 32rpx;
  color: #333;
  overflow-wrap: break-word;
  line-height: 1.7;
}
.hr {
  margin: 32rpx;
  border-top: 1px solid #999;
}
.link {
  color: #216cd3;
  text-decoration: none;
  border-bottom: 1px dashed;
}
.red {
  color: rgb(253, 91, 91);
}
.b {
  font-weight: bold;
}
.choose {
  margin: 75rpx auto;
}

.join {
  width: 350rpx;
  height: 80rpx;
  background-color: #07c160;
  margin: 40rpx auto;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-weight: bold;
  border-radius: 12rpx;
}
