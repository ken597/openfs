
.body-status-wrapper{
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
  margin-top: 60rpx;
}

.body-timer-wrapper{
  display: flex;
  justify-content: space-around;
  height: 110rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.body-timer-style{
  width: 300rpx;
  height: 110rpx; 
  background-color: #ffffff;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, .5);
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
}
.body-timer-left{
  display:flex;
  margin:auto;
  justify-content:center;
  align-items:center;
  flex-direction:column; /* 垂直方向对齐 */
}
.body-set-slider-wrapper{
  display: flex;
  justify-content: space-between;
  width: 675rpx;
  height: 110rpx;
  margin-bottom: 30rpx;
  margin-left: 38rpx;
  background-color: #ffffff;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, .5);
  border-radius: 5px;
}
.body-set-slider-left{
  display:flex;
  margin-left: 36rpx;
  justify-content:center;
  align-items:center;
  flex-direction:column; /* 垂直方向对齐 */
}

.nfc-root{
  height: 130px;
  margin-bottom: 10px;
  margin-left: 5px;
  margin-right: 5px;
  background-color: #ffffff;
  border-radius: 5px;
  padding-top: 5px;
}

.nfc-wifi-wrapper{
  display: flex;
  justify-content:space-between;
  align-items:center;
  flex-direction:row; /* 水平方向对齐 */
  margin-right: 100px;
  margin-left: 10px;
  margin-bottom: 10px;
  padding: 5px 5px 5px 5px;
  background-color: rgb(250, 240, 240);
  box-shadow: 0px 2px 4px rgba(0, 0, 0, .5);
  border-radius: 5px;
}
.nfc-right-wrapper{
  display: flex;
  margin-top: 10px;  
  padding-left: 225px;
}
